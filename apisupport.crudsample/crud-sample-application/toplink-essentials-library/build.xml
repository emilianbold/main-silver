<project name="org.netbeans.modules.toplinkessentialslibrary" default="netbeans" basedir=".">
    <description>Builds, tests, and runs the project org.netbeans.modules.derbyclientlibrary.</description>
    <import file="nbproject/build-impl.xml"/>
    <target name="netbeans-extra">
        <fail message="toplink-essentials.jar doesn't found on ${toplink-essentials.jar}.">
            <condition>
                <not>
                    <available file="${toplink-essentials.jar}"/>
                </not>
            </condition>
        </fail>
        <copy file="${toplink-essentials.jar}" tofile="${cluster}/modules/ext/toplink/toplink-essentials.jar"/>
        <fail message="toplink-essentials-agent.jar doesn't found.">
            <condition>
                <not>
                    <available file="${toplink-essentials-agent.jar}"/>
                </not>
            </condition>
        </fail>
        <copy file="${toplink-essentials.jar}" tofile="${cluster}/modules/ext/toplink/toplink-essentials-agent.jar"/>
    </target>
</project>
