<?xml version="1.0" encoding="UTF-8"?>
<project name="changeme" default="all" basedir=".">
    <target name="all">
        <echo message="${root}"/>

        <taskdef classname="org.netbeans.nbbuild.AutoUpdate" name="autoupdate" classpath="${nb_all}/nbbuild/nbantext.jar"/>

        <autoupdate
            updatecenter="${url}"
            installdir="${target}"
        >
            <modules includes="${includes}"/>
        </autoupdate>
        
    </target>

    <target name="cluster">
        <echo message="${root}"/>

        <taskdef classname="org.netbeans.nbbuild.AutoUpdate" name="autoupdate" classpath="${nb_all}/nbbuild/nbantext.jar"/>

        <autoupdate
            updatecenter="${url}"
            todir="${target}"
        >
            <modules includes="${includes}"/>
        </autoupdate>

    </target>
</project>
