<?xml version="1.0" encoding="UTF-8"?>
<project name="changeme" default="all" basedir=".">
    <target name="all">
        <echo message="${root}"/>

        <taskdef classname="org.netbeans.api.autoupdate.ant.AutoUpdate" name="autoupdate">
            <classpath>
                <fileset dir="${root}">
                    <include name="platform*/**/*.jar"/>
                </fileset>
            </classpath>
        </taskdef>

        <autoupdate
            updatecenter="${url}"
            netbeansdestdir="${target}"
        >
            <modules includes="${includes}"/>
        </autoupdate>
        
    </target>
</project>
