<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="netbeans" name="javafx2.samples">
    <description>Builds, tests, and runs the project org.netbeans.modules.javafx2.samples</description>
    <import file="../nbbuild/templates/projectized.xml"/>

    <target name="jar" depends="zip-examples,projectized-common.jar"/>
    <target name="zip-examples" depends="init">
        <property name="examples" location="${build.classes.dir}/org/netbeans/modules/javafx2/samples/resources/"/>
        <mkdir dir="${examples}"/>
        <zip basedir="BrickBreaker" destfile="${examples}/BrickBreaker.zip">
            <exclude name="build/"/>
            <exclude name="dist/"/>
            <exclude name="nbproject/private/"/>
        </zip>
    </target>    

</project>
